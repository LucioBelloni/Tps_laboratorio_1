#ifndef UTN_H_
#define UTN_H_
/**
 * \fn int utn_getNumeroSinValidar(int*, char*, char*)
 * \brief
 *
 * \param pResultado
 * \param mensaje
 * \param mensajeError
 * \return
 */
int utn_getNumeroSinValidar(int* pResultado, char* mensaje, char* mensajeError);
/**
 * \fn int utn_getNumeroEntero(int*, char*, char*, int, int)
 * \brief
 *
 * \param pResultado
 * \param mensaje
 * \param mensajeError
 * \param minimo
 * \param maximo
 * \return
 */
int utn_getNumeroEntero(int* pResultado, char* mensaje, char* mensajeError, int minimo, int maximo);
/**
 * \fn int utn_getCaracter(char*, char*, char*, char, char, int)
 * \brief
 *
 * \param pResultado
 * \param mensaje
 * \param mensajeError
 * \param minimo
 * \param maximo
 * \param reintentos
 * \return
 */
int utn_getCaracter(char* pResultado, char* mensaje, char* mensajeError, char minimo, char maximo, int reintentos);
/**
 * \fn int utn_getNumeroBasico(int*, char*, char*)
 * \brief
 *
 * \param pResultado
 * \param mensaje
 * \param mensajeError
 * \return
 */
int utn_getNumeroBasico(int* pResultado, char* mensaje, char* mensajeError);
/**
 * \fn int utn_obtenerValidacionLetra(int*, char*, int, int)
 * \brief
 *
 * \param resultado
 * \param mensajeError
 * \param minimo
 * \param maximo
 * \return
 */
int utn_obtenerValidacionLetra(int* resultado, char* mensajeError, int minimo, int maximo);
/**
 * \fn void utn_obtenerPromedio(float*, int, int)
 * \brief
 *
 * \param resultado
 * \param total
 * \param cantidad
 */
void utn_obtenerPromedio(float* resultado, int total, int cantidad );
/**
 * \fn int utn_getNumeroBasico1(float*, char*, char*)
 * \brief
 *
 * \param pResultado
 * \param mensaje
 * \param mensajeError
 * \return
 */
int utn_getNumeroBasico1(float* pResultado, char* mensaje, char* mensajeError);




#endif /* UTN_H_ */
