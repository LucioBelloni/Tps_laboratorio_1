#include <stdio.h>
#include <stdlib.h>

int mostrarMenuConfederacion(int* confederacionAsiatica,int* confederacionAfricana, int* confederaciónDeNorteAmérica, int* confederacionSudamericana , int* confederacionEuropea,int* confederacionOceania ){

	int confederaciones;
	int contadorAsia;
	int contadorAfrica;
	int contadorZonaDelNorte;
	int contadorSudamerica;
	int contadorEuropa;
	int contadorOceania;

		if(confederacionAsiatica != NULL && confederacionAfricana != NULL && confederaciónDeNorteAmérica != NULL && )

					printf("\n      Ingrese a la confederacion que sea su equipo\n");
					printf("1. AFC ->\n"
						   "2. CAF ->\n"
						   "3. CONCACAF ->\n"
						   "4. CONMEBOL ->\n"
						   "5. UEFA ->\n"
						   "6. OFC ->\n "
						   "Ingrese una opcion: ");
					scanf("%d",&confederaciones);

					switch(confederaciones){
						case 1:
							confederacionAsiatica = contadorAsia++;
						break;
						case 2:
							confederacionAfricana = contadorAfrica++;
							 printf("Cantidad de africanos es: %d",contadorAfrica );
						break;
						case 3:
							confederaciónDeNorteAmérica = contadorZonaDelNorte++;
						break;
						case 4:
							confederacionSudamericana = contadorSudamerica++;
							printf("Cantidad de subamericano es: %d",contadorSudamerica );
						break;
						case 5:
							confederacionEuropea = 	contadorEuropa++;
						break;
						case 6:
							confederacionOceania = contadorOceania++;
						break;
					}



}
